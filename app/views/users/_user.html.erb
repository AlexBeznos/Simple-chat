<div class="user-item">
	<div class="status item">
		<div user="<%= user.id %>" class="<%= user.status %>"></div>
	</div>
	<div class="item">
		<div class="name h4"><%= user.name || user.email %></div>
	</div>
	<%= link_to "Open chat", chat_rooms_path(recipient_id: user.id),
					method: :post, class: "btn btn-default pull-right" %>
</div>
